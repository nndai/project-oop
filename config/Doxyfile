# Tên dự án
PROJECT_NAME           = "Music Store Project"

# Thư mục chứa mã nguồn
INPUT                  = ../src

# Bao gồm các tệp C++ (*.cpp và *.h)
FILE_PATTERNS          = *.cpp *.h

# Quét đệ quy các thư mục con
RECURSIVE              = YES

# Trích xuất tất cả (kể cả những phần không có comment)
EXTRACT_ALL            = YES

# Tạo tài liệu HTML
GENERATE_HTML          = YES

# Không tạo tài liệu LaTeX
GENERATE_LATEX         = NO

# Thư mục chứa kết quả đầu ra
OUTPUT_DIRECTORY       = ../docs/doc

# Tắt cảnh báo về các phần chưa có tài liệu
WARN_IF_UNDOCUMENTED   = NO

# Bật sơ đồ lớp nếu có Graphviz
HAVE_DOT               = NO