{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++23",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}\\out\\program.exe",
                "-IC:/Program Files/MySQL/MySQL Server 9.3/include",
                "-LC:/Program Files/MySQL/MySQL Server 9.3/lib",
                "-lmysql"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
